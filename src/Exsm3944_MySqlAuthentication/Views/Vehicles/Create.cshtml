@using Exsm3944_MySqlAuthentication.Data;
@using Exsm3944_MySqlAuthentication.Models;
@model Vehicle;
@{
    ViewData["Title"] = "Create Vehicle";
    Model.CustomerEmail = User.Identity.Name;
    ViewBag.VehicleModels = VehicleModelHandler.GetVehicleModelByEmail(User.Identity.Name);
}
<h1>Create a Vehicle</h1>

@using(Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.CustomerEmail)

    <div class="form-group">
        @Html.DropDownListFor(m => m.ModelID, new SelectList(ViewBag.VehicleModels, "ID", "Name"), "-- Select --")
        @Html.ValidationMessageFor(model => model.ModelID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VIN, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.VIN, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.VIN, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ModelYear, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.ModelYear, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ModelYear, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Colour, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.Colour, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Colour, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PurchaseDate, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.PurchaseDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.PurchaseDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SaleDate, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.SaleDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.SaleDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Create" id="Create" class="btn btn-default"  /> 
    </div>
}